<%- include('partials/header') -%>
<h1>Home</h1>
<p><%= content %></p>

<% posts.forEach(function(post){ %> 
  <h2> <%= post.title %> </h2>
  <% if (post.body.length > 100){ %>
     <p> <%= post.body.substring(0,100) + '...' %> </p>
    <% } else { %> 
      <p> <%= post.body %> </p>
    <% } %>

<% }) %>

